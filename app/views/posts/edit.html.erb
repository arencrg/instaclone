<%= image_tag @post.image.url(:medium) %>
<%= simple_form_for @post do |f| %>
<%= f.input :caption %>
<%= f.button :submit, class: 'btn-success' %>

<br/> <%= link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
<br/> <%= link_to "Cancel", posts_path %>
<% end %>