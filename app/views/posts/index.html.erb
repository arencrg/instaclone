<div class="container"> 
<div class="posts-wrapper">
  <div class="post">
    <% @posts.each do |post| %>
    <div class="post-head">
        
      <div class="user-name">
        <h2>@<%= post.user.user_name %></h2>
      </div>
    </div>
    <div class="image center-block">
      <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %>
      <br/>
    </div>
    <div class="post-bottom">
      <div class="caption">
          <strong><%= post.user.user_name %></strong>
          <%= post.caption %>
          <br/>
           <small><%= time_ago_in_words(post.created_at, include_seconds: true)  %> ago</small>
      </div>
      <hr>
      <% if post.comments %>
        <% post.comments.each do |comment| %>
          <div class="comment">
            <div class="user-name">
              <strong><%= comment.user.user_name %></strong>            
            </div>
            <div class="comment-content">
              <%= comment.content %>
              <br/><br/>
            </div>
          </div>
      <% end %>
      <br/>
      <% end %>
      
        <%= form_for [post, post.comments.new] do |f| %>
        <%= f.text_field :content, placeholder: '  Add a comment...', id: "commentthing" %>
        <% end %>
        <br/>
        <br/>
    </div>

<% end %>
  </div>
      
</div>


<div id="mySidenav" class="sidenav">
  <br/>
  <br/>
<%= render 'newpost' %>
  <br/>
  <br/>
<a href="javascript:void(0)" class="closebtn" onclick="closeNav()"><span class="glyphicon glyphicon-remove"></span></a>
</div>

</div>